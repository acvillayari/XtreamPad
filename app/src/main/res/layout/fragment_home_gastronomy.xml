<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.Home_GastronomyFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageHome_Principal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="0dp"
                    android:src="@raw/gastronomia_principal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:paddingLeft="120dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imagebebida"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:background="@android:color/transparent"
                            android:baselineAligned="false"
                            android:src="@raw/bebida" />

                        <TextView
                            android:id="@+id/txtBebida"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Bebida"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imagecartamenu"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:background="@android:color/transparent"
                            android:src="@raw/cartamenu" />

                        <TextView
                            android:id="@+id/txtCartaMenu"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Carta MenÃº"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imagepromociones"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:background="@android:color/transparent"
                            android:src="@raw/promociones" />

                        <TextView
                            android:id="@+id/txtpromociones"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Promociones"
                            android:textColor="#fff" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnBack"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="225dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:background="#89000000"
                            android:text="Back"
                            android:textColor="@color/colorWhite" />

                        <Button
                            android:id="@+id/btnHome"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/btnBack"
                            android:layout_marginStart="14dp"
                            android:layout_marginBottom="-1dp"
                            android:layout_toEndOf="@+id/btnBack"
                            android:layout_weight="1"
                            android:background="#89000000"
                            android:text="Home"
                            android:textColor="@color/colorWhite" />
                    </RelativeLayout>
                </TableRow>


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</FrameLayout>